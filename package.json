{
  "name": "@seasons/eclipse",
  "version": "1.0.9",
  "description": "Components library for harvest and flare",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "seasons-eclipse.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && yarn rewrite-paths",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "prettier": "prettier --write 'src/**/*.{js,ts,tsx,graphql}' '*.{js,ts,tsx,graphql}' --ignore-path ./.prettierignore",
    "rewrite-paths": "tsc-alias --dir lib/commonjs && tsc-alias --dir lib/module"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/seasons/eclipse",
  "author": "Luc Succes <l2succes@gmail.com> (https://github.com/l2succes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seasons/eclipse/issues"
  },
  "homepage": "https://github.com/seasons/eclipse#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@material-ui/core": "^4.11.1",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@types/styled-components": "^5.1.2",
    "@types/styled-system": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-react-native-web": "^0.14.1",
    "babel-plugin-root-import": "^6.4.1",
    "babel-plugin-styled-components": "^1.10.7",
    "commitlint": "^8.3.5",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-fade-in-image": "^1.5.0",
    "react-native-fast-image": "^8.3.4",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-svg": "12.1.0",
    "react-native-web": "^0.14.8",
    "react-primitives": "^0.8.1",
    "react-spring": "^8.0.27",
    "release-it": "^13.5.8",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "tsc-alias": "^1.1.5",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "yarn": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": false,
          "semi": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
